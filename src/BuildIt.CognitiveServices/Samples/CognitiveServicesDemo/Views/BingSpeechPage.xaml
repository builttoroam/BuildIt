<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CognitiveServicesDemo.Views.BingSpeechPage">
<Grid>
  <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
  </Grid.RowDefinitions>

  <Label Text="Bing Speech" VerticalOptions="Center" HorizontalOptions="Center" />
  <Button Grid.Row="1" x:Name="ButtonClick" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="Silver" Text="Cick and speak" Clicked="Button_OnClicked"></Button>
  <Editor Grid.Row="2" x:Name="Editor" HeightRequest="300" HorizontalOptions="FillAndExpand"></Editor>
</Grid>
</ContentPage>