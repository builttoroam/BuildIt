<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.0</TargetFramework>
    <AssemblyName>BuildIt.States</AssemblyName>
    <PackageId>BuildIt.States</PackageId>
    <GenerateAssemblyTitleAttribute>false</GenerateAssemblyTitleAttribute>
    <GenerateAssemblyDescriptionAttribute>false</GenerateAssemblyDescriptionAttribute>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
  </PropertyGroup>

  <Import Project="..\..\BuildIt.Shared\SharedAssemblyInfo.targets" />
   
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>bin\Debug\</OutputPath>
    <DocumentationFile>bin\Debug\netstandard1.0\BuildIt.States.xml</DocumentationFile>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>bin\Release\</OutputPath>
    <DocumentationFile>bin\Release\netstandard1.0\BuildIt.States.xml</DocumentationFile>
    <DefineConstants>RELEASE;NETSTANDARD1_0</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="EnumStateDefinition.cs" />
    <Compile Remove="EnumStateDefinitionWithDataWrapper.cs" />
    <Compile Remove="Interfaces\IEnumStateDefinition.cs" />
    <Compile Remove="Interfaces\IEnumStateDefinitionWithData.cs" />
    <Compile Remove="Interfaces\IEnumStateGroup.cs" />
    <Compile Remove="Interfaces\INotifyEnumStateChanging.cs" />
    <Compile Remove="Interfaces\ITypedStateGroupDefinition_old.cs" />
    <Compile Remove="TypedStateGroupDefinition{TState}.cs" />
    <Compile Remove="TypedStateGroup`1.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\BuildIt.Shared\GlobalSuppressions.cs" Link="GlobalSuppressions.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BuildIt.General" Version="1.1.0.64-beta" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" />
  </ItemGroup>

</Project>
